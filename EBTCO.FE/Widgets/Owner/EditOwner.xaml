<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EBTCO.FE.Widgets.Owner.EditOwner"
             Title="EditOwner">
    <VerticalStackLayout HorizontalOptions="Center">
        <HorizontalStackLayout Style="{StaticResource FormGroupStyle}">
            <Label Text="First Name" VerticalOptions="Center" Style="{StaticResource FormLabelStyle}"/>
            <Entry x:Name="FirstName" Placeholder="ex. Mario" Style="{StaticResource FormEntryStyle}"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout Style="{StaticResource FormGroupStyle}">
            <Label Text="Last Name" VerticalOptions="Center" Style="{StaticResource FormLabelStyle}"/>
            <Entry x:Name="LastName" Placeholder="ex. Samir" Style="{StaticResource FormEntryStyle}"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout Style="{StaticResource FormGroupStyle}">
            <Button Text="Submit" x:Name="Submit" Clicked="Submit_Clicked" WidthRequest="200"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>