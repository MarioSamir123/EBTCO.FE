<ResourceDictionary 
        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    
    <Style x:Key="FormGroupStyle" TargetType="HorizontalStackLayout">
        <Setter Property="Margin" Value="0, 20, 0, 0"/>
    </Style>

    <Style x:Key="FormLabelStyle" TargetType="Label">
        <Setter Property="WidthRequest" Value="150"/>
        <Setter Property="Margin" Value="0, 10, 0, 0"/>
    </Style>

    <Style x:Key="FormEntryStyle" TargetType="Entry">
        <Setter Property="WidthRequest" Value="500"/>
        <Setter Property="Margin" Value="0, 20, 0, 0"/>
    </Style>
    <Style x:Key="FormButtonStyle" TargetType="Entry">
        <Setter Property="WidthRequest" Value="200"/>
        <Setter Property="Margin" Value="0, 20, 0, 0"/>
    </Style>
</ResourceDictionary>